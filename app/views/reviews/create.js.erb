<% if @review.errors.any? %>
  // Render new review form with errors
  $('.div-errors').append("Tous les champs doivent être remplis");
<% else %>
  $('.modal-body').empty().append("Merci pour votre évaluation ! Le crédit des heures a bien été effectué.");

  setTimeout(function(){
    $('#myModal').modal('hide');
  }, 1500);
<% end %>
