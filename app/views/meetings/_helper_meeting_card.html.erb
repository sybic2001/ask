<div class="col-xs-12">
  <div class="meeting-card" id="meeting-card-<%= meeting.id %>">
    <div class="user-picture">
      <%= link_to profile_path(meeting.helpee) do %>
        <% if meeting.helpee.profile.photo? %>
          <%= cl_image_tag meeting.helpee.profile.photo.path, class: 'avatar-large' %>
        <% end %>
      <% end %>
    </div>
    <div class="content-meeting">
      <p><%= meeting.helpee.first_name %> vous a demandé de l'aide en <%= meeting.user_competency.competency.name %></p>
    </div>
    <% if meeting.status == "pending approval" %>
      <div class="action-meeting">
        <%= simple_form_for meeting, html: { class: 'form-inline' }, remote: true do |f| %>
          <%= f.input :date, as: :string, label: false, required: true, input_html: { class: 'datepicker-input' }, placeholder: "Date" %>
          <%= f.input :duration, label: false, required: true, placeholder: "Durée" %>
          <%= f.hidden_field :status, value: "accepted" %>
          <%= f.submit :button, value: "Accepter", class: 'btn btn-success' %>
        <% end %>
      </div>
      <div class="action-meeting">
        <%= simple_form_for meeting, html: { class: 'form-inline' }, remote: true do |f| %>
          <%= f.hidden_field :status, value: "refused" %>
          <%= f.submit :button, value: "Refuser", class: 'btn btn-danger' %>
        <% end %>
      </div>
    <% elsif meeting.status == "accepted" %>
      <div class="action-meeting">
        <strong><%= meeting.date.strftime("%d/%m/%y") %> - <%= meeting.duration %>h</strong>&nbsp;
      </div>
      <div class="action-meeting">
        <%= simple_form_for meeting, html: { class: 'form-inline' }, remote: true do |f| %>
          <%= f.hidden_field :status, value: "cancelled" %>
          <%= f.submit :button, value: "Annuler", class: 'btn btn-danger', data: { confirm: "Etes-vous sûr de vouloir annuler ce meeting ?" } %>
        <% end %>
      </div>
    <% elsif meeting.status == "pending review" %>
      <div class="action-meeting">
        <%= simple_form_for [meeting, @message], html: { class: 'form-inline' }, remote: true do |f| %>
          <%= f.hidden_field :description, value: "N'oublie pas de m'évaluer !" %>
          <%= f.submit :button, value: "Relancer", class: 'btn btn-danger' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
