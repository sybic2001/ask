var new_message = $("<%= j render 'messages/message_card', message: @message, meeting: @meeting %>").hide();
$('#chatbox').append(new_message);
new_message.show();

$('#chatbox').stop().animate({
  scrollTop: $('#chatbox')[0].scrollHeight
}, 1200);

setTimeout(function(){
  window.location.replace("<%= meetings_path %>");
}, 2000);
