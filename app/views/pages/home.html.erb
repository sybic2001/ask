<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('background-alumni.jpg') %>);">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">

        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <h3>Je cherche du support et des compétences dans mon réseau</h3>
          <%= link_to "Trouver des compétences", user_competencies_path, class: "btn btn-success" %>
        </div>
        <div class="col-xs-12 col-md-6">
          <h3>Je gère mes demandes et planifie mes échanges</h3>
          <%= link_to "Accéder à mon tableau de bord", meetings_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>





<% content_for :after_js do %>
  <script type="text/javascript">
    $(document).ready(function(){
      setTimeout(function(){
        $('#alert').slideUp(300, function(){
          $(this).remove();
        });
      }, 2000);
     })
  </script>
<% end %>
