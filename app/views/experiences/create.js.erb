// Create a paragraph for the new review. But hide it.
var new_experience = $("<%= j render 'experience_card', experience: @experience %>").hide();
// Add it to the DOM, at the end of the existing reviews. It's still hidden.
$('.modal-content .experiences-box').append(new_experience);
$('.modal-content #form-experience input').each(function(){
  if (!$(this).hasClass('btn')){
    $(this).val('');
  }
});
// Show the new review with an animation!
new_experience.slideDown();
